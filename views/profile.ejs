<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white">
      <a
        href="/logout"
        class="bg-red-500 rounded-md px-3 py-2 mb-5 inline-block"
        >Logout</a
      >
      <h3 class="text-3xl mb-5 text-white">
        <span class="font-light">Hello</span>, <%= user.name %>
      </h3>
      <h5 class="mb-5">You can create a post</h5>
      <form action="/post" method="post">
        <textarea
          name="content"
          placeholder="What's on your mind?"
          class="p-3 w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"
        ></textarea>
        <input
          type="submit"
          class="px-3 py-2 bg-blue-500 block rounded-md mt-2"
          value="Create new post"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-2xl text-zinc-400">Your Posts</h3>
        <div class="post_container mt-5">
          <% user.posts.forEach(function(post) { %>

          <div
            class="post w-1/3 mb-4 p-4 border-[1px] bg-zinc-700 border-zinc-800 rounded-md"
          >
            <h4 class="text-blue-500 mb-3">@<%= user.username%></h4>
            <p class="text-sm tracking-tight"><%= post.content %></p>
            <div class="btns flex gap-4 mt-5">
              <a class="text-blue-500" href="">Like</a>
              <a class="text-zinc-600" href="">Edit</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
